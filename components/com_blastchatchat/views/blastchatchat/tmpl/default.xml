<?xml version="1.0" encoding="utf-8"?>
<metadata>
		<layout title="BlastChat Chat - Default View">
			<message>Default BlastChat Chat view</message>
		</layout>
		<params>
			<param
				name="rids"
				type="text"
				label="COM_BLASTCHATCHAT_FIELD_RIDS_LABEL"
				description="COM_BLASTCHATCHAT_FIELD_RIDS_DESC"
				default="1"
			>
			</param>
		</params>
		
	  <fields name="params">
	      <!-- Basic options. -->
	      <fieldset name="params"
	         label="JGLOBAL_FIELDSET_DISPLAY_OPTIONS"
	      >
					<field
						name="interface"
						type="list"
						label="COM_BLASTCHATCHAT_FIELD_INTERFACE_LABEL"
						description="COM_BLASTCHATCHAT_FIELD_INTERFACE_DESC"
						default="chat"
					>
						<option value="chat">COM_BLASTCHATCHAT_FIELD_INTERFACE_CHAT</option>
						<option value="shout">COM_BLASTCHATCHAT_FIELD_INTERFACE_SHOUT</option>
					</field>
					<field
						name="width"
						type="text"
						label="COM_BLASTCHATCHAT_FIELD_WIDTH_LABEL"
						description="COM_BLASTCHATCHAT_FIELD_WIDTH_DESC"
						default="100%"
					>
					</field>
					<field
						name="height"
						type="text"
						label="COM_BLASTCHATCHAT_FIELD_HEIGHT_LABEL"
						description="COM_BLASTCHATCHAT_FIELD_HEIGHT_DESC"
						default="480"
					>
					</field>
					<field
						name="rids"
						type="text"
						label="COM_BLASTCHATCHAT_FIELD_RIDS_LABEL"
						description="COM_BLASTCHATCHAT_FIELD_RIDS_DESC"
						default="1"
					>
					</field>
	      </fieldset>
	   </fields>
</metadata>